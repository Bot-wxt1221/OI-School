{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "/usr/bin/g++",
			"args": [
				"-DONLINE_JUDGE",
				"-std=c++14",
				"-g",
				"${file}",
				"-Wall",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "/usr/bin/g++"
		}
	]
}
